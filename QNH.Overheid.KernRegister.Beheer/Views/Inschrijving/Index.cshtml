@model QNH.Overheid.KernRegister.Beheer.Controllers.ScheduledTaskManager


@using Microsoft.Win32.TaskScheduler

@{
    ViewBag.Title = "Importeer CSV";

}

@section customstyles
{

    @Styles.Render("~/bundles/fileupload/bootstrap/BasicPlusUI/css")

    <!-- Bootstrap CSS fixes for IE6 -->
    <!--[if lt IE 7]><link rel="stylesheet" href="/Content/FileUpload/css/bootstrap/bootstrap-ie6.debug.css"><![endif]-->
    <!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"><![endif]-->

    @Styles.Render("~/bundles/datetimepickercss")
    <style>
        .form-batch .row {
            margin-bottom: 5px;
        }

        .error {
            color: red;
        }

        select[disabled] {
            background-color: #e4e4e4;
        }
    </style>
}

<div class="modal hide fade" id="importfromkvk" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Verwerkingsstatus .csv</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-4">Voortgang:</div>
                    <div class="col-sm-8">
                        <div class="progress">
                            <div id="procprogesssuccess" class="progress-bar progress-bar-success" style="width: 0%">
                            </div>
                            <div id="procprogresserror" class="progress-bar progress-bar-danger" style="width: 0%">
                            </div>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">KVK Naam:</div>
                    <div class="col-sm-8">
                        <label id="kvknaam"></label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">Fout/Success/Totaal</div>
                    <div class="col-sm-8">
                        <label id="processStats"></label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">Nieuw/Aangepast/Bestaand</div>
                    <div class="col-sm-8">
                        <label id="storageStats"></label>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button id="btnCloseProgress" type="button" class="btn btn-default" data-dismiss="modal">Sluiten</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div>
    <!-- The file upload form used as target for the file upload widget -->
    <div class="row">
        <div class="col-sm-3">
            <h3>KVK bulkimport</h3>
            <strong>Batchupdate</strong>
            <p>Hier kunnen de @Default.ApplicationName inschrijvingen geactualiseerd worden met gegevens vanuit het handelsregister.</p>
        </div>
        <div class="col-sm-9">
            <h3>Plan een batchupdate</h3>
            <p>Plan hier de batchupdate van alle @Default.ApplicationName inschrijvingen</p>
            @Html.Partial("_TaskSchedulerPartial", Model)
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-3">
            <strong>Initiële load</strong>
            <p>Hier kan met behulp van een .csv met KVK nummers de @Default.ApplicationName gevuld worden met gegevens vanuit het handelsregister.</p>
            <p>Klik <a href="@Url.Content("~/voorbeeld.csv")">hier</a> voor een voorbeeld .csv bestand.</p>
        </div>
        <div class="col-sm-9">

            <h3>Initiële load</h3>
            @Html.Partial("_BackloadPartial")


            <hr />
            <h4>Laatste logfiles KVK errors (10 maximaal)</h4>
            <div class="log-files">
                @foreach (var logfile in Model.KvKLogFiles.OrderByDescending(s => s).Take(10))
                {
                    <div class="row">
                        <div class="col-sm-12">
                            <a href="#" data-href="@Path.GetFileName(logfile)">@Path.GetFileName(logfile)</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</div>

@section scripts {
    <script src="~/Scripts/jquery.signalR-2.4.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>

    <!-- We use Backloads. bundeling feature to register only those client side javascript and style files of the jQuery File Upload Plugin that are needed  -->
    @Scripts.Render("~/bundles/fileupload/bootstrap/BasicPlusUI/js")

    <!-- Initialize the jQuery File Upload Plugin -->
    <script src="~/Scripts/FileUpload/inschrijving.js"></script>

    <!-- The TaskScheduler Script -->
    @Scripts.Render("~/bundles/datetimepicker")
    @if (!Model.ExecutableProcessDisabled)
    {
        @TaskSchedulerScript.RenderTaskSchedulerScript(Url, Model.Trigger, Model.Trigger == null ? TaskTriggerType.Time : Model.Trigger.TriggerType)
    }

}