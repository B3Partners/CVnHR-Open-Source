@model QNH.Overheid.KernRegister.Beheer.Controllers.TasksController
@using Microsoft.Win32.TaskScheduler
@{
    ViewBag.Title =  Default.ToTasks;
}

@section customstyles
{

    @Styles.Render("~/bundles/fileupload/bootstrap/BasicPlusUI/css")

    <!-- Bootstrap CSS fixes for IE6 -->
    <!--[if lt IE 7]><link rel="stylesheet" href="/Content/FileUpload/css/bootstrap/bootstrap-ie6.debug.css"><![endif]-->
    <!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"><![endif]-->

    @Styles.Render("~/bundles/datetimepickercss")
    <style>
        .form-batch .row {
            margin-bottom: 5px;
        }

        .error {
            color: red;
        }

        select[disabled] {
            background-color: #e4e4e4;
        }
    </style>
}

<div>
    <!-- The file upload form used as target for the file upload widget -->
        <div class="col-sm-3">
            <h3>Config</h3>
        </div>

    @foreach (var task in Model.TaskProcesses)
    {
        <div class="row">
            <div class="col-sm-12">
                <a href="#" id="@task.Name" data-href="@task.Name">@task.Name</a>
                <button onclick="manageTask(this.id)" id="@task.Name" class="btn btn-default btn-primary btn-save-config">Beheer taak</button>
            </div>
        </div>
    }
</div>

@section scripts {
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>

    <!-- We use Backloads. bundeling feature to register only those client side javascript and style files of the jQuery File Upload Plugin that are needed  -->
    @Scripts.Render("~/bundles/fileupload/bootstrap/BasicPlusUI/js")

    <!-- Initialize the jQuery File Upload Plugin -->
    <script type="text/javascript">
        function manageTask(clicked_id) {
            location.replace(window.location.origin + "/Brmo?name=" + clicked_id);
        }
    </script>
}
