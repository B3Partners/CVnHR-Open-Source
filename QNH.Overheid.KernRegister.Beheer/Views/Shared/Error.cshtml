@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<hgroup class="title">
    <h1 class="error">Error.</h1>
    <h2 class="error">An error occurred while processing your request.</h2>
    
    <p style="display:none;">

        @{
         var ex = Model.Exception;
        }
        @while (ex != null)
        {
            @ex.Message
            <br/>
            @ex.StackTrace
            <br/><br/>
            
            ex = ex.InnerException;
        }
    </p>

</hgroup>
